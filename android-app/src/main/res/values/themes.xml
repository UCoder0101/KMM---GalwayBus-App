<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Allows us to override night specific attributes in the
         values-night folder. -->
    <style name="NightAdjusted.Theme.GalwayBus" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
    </style>

    <!-- Allows us to override platform level specific attributes in their
         respective values-vXX folder. -->
    <style name="PlatformAdjusted.Theme.GalwayBus" parent="NightAdjusted.Theme.GalwayBus">
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <!-- The final theme we use -->
    <style name="Theme.GalwayBus" parent="PlatformAdjusted.Theme.GalwayBus" />


</resources>
